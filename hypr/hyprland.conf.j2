################
#### MACROS ####
################
{% macro render_section(section) %}
    {% for key, value in section.items() %}
        {% if value is mapping %}
            {{ key }} {
            {{ render_section(value) }}
            }
        {% else %}
            {{ key }} = {{ value }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro render_dot_section(data, indent=0) %}
{%- for key, value in data.items() %}
    {{ ' ' * indent }}{{ key }} = {% if value is mapping %}
    {{ '\n' }}{{ render_dot_section(value, indent + 4) }}
    {%- else -%}
    {{ value }}
    {%- endif %}
{%- endfor %}
{% endmacro %}

